<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <!-- FrostedGlassView with custom corner radius -->
    <com.cn.frosted.glass.frostedglasseffect.view.FrostedGlassView
        android:id="@+id/frostedGlassView"
        android:layout_width="200dp"
        android:layout_height="200dp"
        app:cornerRadius="24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@id/frostedGlassView1"
        app:layout_constraintBottom_toBottomOf="parent">
        
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hello World!"
            android:textColor="#FFFFFF"
            android:textSize="24sp"
            android:layout_gravity="center" />
            
    </com.cn.frosted.glass.frostedglasseffect.view.FrostedGlassView>

    <com.cn.frosted.glass.frostedglasseffect.view.FrostedGlassView
        android:id="@+id/frostedGlassView1"
        android:layout_width="500dp"
        android:layout_height="200dp"
        app:cornerRadius="24dp"
        app:layout_constraintStart_toEndOf="@id/frostedGlassView"
        app:layout_constraintTop_toTopOf="@+id/frostedGlassView"
        app:layout_constraintEnd_toEndOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>